@model List<Professor>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Cpf</th>
            <th scope="col">Disciplina</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (Professor professor in Model)
            {
                <tr class="align-text-top">
                    <td>@professor.Nome</td>
                    <td>@professor.Cpf</td>
                    <td class="">@professor.Disciplina</td>

                    <td>
                        <div class="d-grid gap-1 d-md-block">
                            <a type="submit" class="btn btn-warning" role="button" asp-controller="Professor" asp-action="Editar" asp-route-id="@professor.Id">Editar</a>
                            <a type="submit" class="btn btn-danger" role="button" asp-controller="Professor" asp-action="ExcluirProfessor" asp-route-id="@professor.Id">Excluir</a>
                        </div>
                    </td>

                </tr>
            }
        }
    </tbody>
</table>

<div class="text-center">
    <a class="btn btn-primary" type="button" asp-controller="Professor" asp-action="AdicionarProfessor">Adicionar Professor</a>
</div>